{
  "name": "git-pre-commit-test",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "serve": "vue-cli-service serve",
    "build": "vue-cli-service build",
    "lint": "vue-cli-service lint",
    "test": "echo \"Error: I SHOULD FAIL LOLOLOLOLOL \" && exit 0",
    "foo": "echo \"fooo\" && exit 0",
	"bar": "echo \"bar\" && exit 0",
	"lint-staged": "lint-staged && echo \"刘德华唱歌很好听\""
  },
  "dependencies": {
    "core-js": "^3.3.2",
    "vue": "^2.6.10"
  },
  "devDependencies": {
    "@vue/cli-plugin-babel": "^4.0.0",
    "@vue/cli-plugin-eslint": "^4.0.0",
    "@vue/cli-service": "^4.0.0",
    "babel-eslint": "^10.0.3",
    "eslint": "^5.16.0",
    "eslint-plugin-vue": "^5.0.0",
    "eslint-watch": "^6.0.1",
    "lint-staged": "^9.4.3",
    "pre-commit": "^1.2.2",
    "vue-template-compiler": "^2.6.10"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true
    },
    "extends": [
      "plugin:vue/essential",
      "eslint:recommended"
    ],
    "rules": {
      "no-var": 2
    },
    "parserOptions": {
      "parser": "babel-eslint"
    }
  },
  "postcss": {
    "plugins": {
      "autoprefixer": {}
    }
  },
  "gitHooks": {
    "pre-commit": "lint-staged"
  },
  "lint-staged": {
	"{src,config}/**/*.{js,jsx,vue}": [
		"esw --fix",
		"git add"
	]
	
  },

  "browserslist": [
    "> 1%",
    "last 2 versions"
  ]
}
